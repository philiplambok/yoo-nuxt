#!/bin/bash
# Common functions for dx commands

check_docker() {
    if ! command -v docker &> /dev/null; then
        echo "âŒ Docker is not installed or not in PATH"
        echo ""
        echo "ğŸ’¡ Install Docker Desktop from:"
        echo "   https://www.docker.com/products/docker-desktop"
        echo ""
        echo "ğŸ“š For more info: ./dx/help"
        exit 1
    fi

    if ! docker info &> /dev/null; then
        echo "âŒ Docker daemon is not running"
        echo ""
        echo "ğŸ’¡ Start Docker Desktop and try again"
        echo "â³ Docker may take a few moments to start..."
        echo ""
        echo "ğŸ“š For more info: ./dx/help"
        exit 1
    fi

    if ! command -v docker-compose &> /dev/null; then
        echo "âŒ docker-compose is not installed or not in PATH"
        echo ""
        echo "ğŸ’¡ Install docker-compose:"
        echo "   https://docs.docker.com/compose/install/"
        echo ""
        echo "ğŸ“š For more info: ./dx/help"
        exit 1
    fi
}

check_container_running() {
    if ! docker-compose -f docker-compose.dev.yml ps --services --filter "status=running" | grep -q "app"; then
        echo "âŒ Development container is not running"
        echo ""
        echo "ğŸ’¡ To fix this, run the container first:"
        echo "   ./dx/run"
        echo ""
        echo "ğŸ” If you get an image error, build the image first:"
        echo "   ./dx/build    # Build the Docker image"
        echo "   ./dx/run      # Then start the container"
        echo ""
        echo "ğŸ“š For more info: ./dx/help"
        exit 1
    fi
}

check_image_exists() {
    if ! docker image inspect yoo-nuxt-todo:dev &> /dev/null; then
        echo "âŒ Docker image 'yoo-nuxt-todo:dev' not found"
        echo ""
        echo "ğŸ’¡ Build the Docker image first:"
        echo "   ./dx/build    # This will create the development environment"
        echo ""
        echo "â³ Building may take a few minutes on first run..."
        echo "ğŸ“¦ After building, you can run: ./dx/run"
        echo ""
        echo "ğŸ“š For more info: ./dx/help"
        exit 1
    fi
}